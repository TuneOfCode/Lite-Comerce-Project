                <div class="col-sm-10">
                    <input type="email" class="form-control" style="width: 110%" placeholder="">
                </div>
            </div>

            <div class="form-group" style="margin-right: 10%;">
                <label class="control-label col-sm-2">Ghi chú:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" style="width: 110%" placeholder="">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10 text-right">

                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save" style="margin-right: 2px;"></i> Lưu dữ liệu
                    </button>

                    <a href="~/Employee" class="btn btn-default">
                        Quay lại
                    </a>

                </div>
            </div>
        </form>
    </div>
