<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" enctype="multipart/form-data">
            <div style="display: flex; flex-wrap: wrap;">
                <div style="flex: 2;">
                    <div class="form-group">
                        <label class="control-label col-sm-2">Họ và tên đệm:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" style="width: 95%;" placeholder="" autofocus>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2">Tên nhân viên:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" style="width: 95%;" placeholder="">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2">Ngày tháng năm sinh:</label>
                        <div class="col-sm-10">
                            <input type="date" class="form-control" style="width: 95%;" placeholder="">
                        </div>
                    </div>

                </div>

                <div style="margin-right: 5%;">
                    <div class="form-group">
                        <div class="dropzone box" style="width: 100px; height: 80px; border-radius: 3px; text-align: center;">
                            <img src="~/Public/Images/upload-employee.jpg" width="100" class="upload-icon"
