
@{

}

<div class="box box-primary">
    <div class="box-body">

        @*thành phần tìm kiếm*@
        <form>
            <div class="input-group">
                <input type="text" class="form-control" name="searchValue" placeholder="Tìm kiếm..." autofocus>
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                        Tìm kiếm
                    </button>

                    @*Nút thêm dữ liệu*@
                    <a class="btn btn-primary" data-toggle="modal" data-target="#shipperModal" style="margin-left: 5px;">
                        <i class="fa fa-plus" style="margin-right: 2px;"></i> Bổ sung
                    </a>
                </div>
            </div>
        </form>

        @*Kết quả tìm kiếm*@
        <p style="margin-top: 10px; text-align: center; color: green;">
            Có <strong>1,234,000</strong> người giao hàng trong tổng số <b>100</b> trang
        </p>

        @*Bảng hiển thị kết quả*@
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead class="bg-success">
                    <tr>
                        <th>Tên người giao hàng</th>
                        <th>Số điện thoại</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < 5; i++) {
                        <tr>
                            <td>Nguyễn Văn A</td>
                            <td>01234567891</td>
                            <td>
                                @*Nút sửa dữ liệu*@
                                <a class="btn btn-xs btn-primary" data-toggle="modal" data-target="#shipperModal">
                                    <i class="fa fa-edit"></i>
                                </a>
                                @*Nút xoá dữ liệu*@
                                <a class="btn btn-xs btn-danger" data-toggle="modal" data-target="#deleteShipperModal">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @*Phân trang*@
        <div class="text-center">
            <ul class="pagination">
                <li><a href="#">1</a></li>
                <li class="active"><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
            </ul>
        </div>

        @*Thành phần modal của tạo/sửa dữ liệu*@
        @{
            Html.RenderPartial("Edit");
        }

        @*Thành phần modal của xoá dữ liệu*@
        @{
            Html.RenderPartial("Delete");
        }
    </div>
</div>