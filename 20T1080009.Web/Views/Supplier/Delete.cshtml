
@{
    ViewBag.Title = "Xoá nhà cung cấp";
}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal">

            <div class="form-group">
                <label class="control-label col-sm-2">Tên nhà cung cấp:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">Microsoft</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên giao dịch:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">giao dịch</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">địa chỉ</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Điện thoại:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">điện thoại</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Quốc gia:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">quốc gia</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tỉnh/Thành phố:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">tỉnh/thành phố</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mã bưu chính:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">mã bưu chính</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10 text-right">

                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash" style="margin-right: 2px;"></i> Xoá dữ liệu
                    </button>

                    <a href="~/Supplier" class="btn btn-default">
                        Quay lại
                    </a>

                </div>
            </div>
        </form>
    </div>
</div>

