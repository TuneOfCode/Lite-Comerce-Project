
@{
    
}

<div class="box box-primary">
    <div class="box-body">

        @*thành phần tìm kiếm*@
        <form>
            <div class="input-group">
                <input type="text" class="form-control" name="searchValue" placeholder="Tìm kiếm..." autofocus>
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                        Tìm kiếm
                    </button>

                    @*Nút thêm dữ liệu*@
                    <a href="~/Supplier/Create" class="btn btn-primary" style="margin-left: 5px;">
                        <i class="fa fa-plus" style="margin-right: 2px;"></i> Bổ sung
                    </a>
                </div>
            </div>
        </form>

        @*Kết quả tìm kiếm*@
        <p style="margin-top: 10px; text-align: center; color: green;">
            Có <strong>1,234,000</strong> nhà cung cấp trong tổng số <b>100</b> trang
        </p>

        @*Bảng hiển thị kết quả*@
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead class="bg-success">
                    <tr>
                        <th>Tên nhà cung cấp</th>
                        <th>Tên giao dịch</th>
                        <th>Địa chỉ</th>
                        <th>Điện thoại</th>
                        <th>Quốc gia</th>
                        <th>Thành phố</th>
                        <th>Mã bưu chính</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < 5; i++) {
                        <tr>
                            <td>Microsoft</td>
                            <td>Hàng điện tử</td>
                            <td>Mỹ Tho</td>
                            <td>+123456789</td>
                            <td>Mỹ</td>
                            <td>Sanfasico</td>
                            <td>NCC.123456</td>
                            <td>
                                @*Nút sửa dữ liệu*@
                                <a href="~/Supplier/Edit" class="btn btn-xs btn-primary">
                                    <i class="fa fa-edit"></i> 
                                </a>
                                @*Nút xoá dữ liệu*@
                                <a href="~/Supplier/Delete" class="btn btn-xs btn-danger">
                                    <i class="fa fa-trash"></i> 
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @*Phân trang*@
        <div class="text-center">
            <ul class="pagination">
                <li><a href="#">1</a></li>
                <li class="active"><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
            </ul>
        </div>
    </div>
</div>